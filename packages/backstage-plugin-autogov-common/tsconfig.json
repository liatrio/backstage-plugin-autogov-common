{
  "extends": "@backstage/cli/config/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist", // Compiled JS files go to 'dist'
    "rootDir": ".", // Use the root of the plugin folder to ensure the 'src' folder is preserved in output
    "declaration": true, // Generate declaration files
    "declarationDir": "../../dist-types/packages/backstage-plugin-autogov-common", // Output declaration files to correct path
    "declarationMap": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
